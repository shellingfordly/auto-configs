{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "declaration": true,

    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": ["./src/*.ts"]
}
